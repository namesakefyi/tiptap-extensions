{
  "name": "@namesake/tiptap-extensions",
  "version": "3.0.2",
  "description": "Extensions for Tiptap",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "build": "tsup",
    "dev": "tsup --watch",
    "ci:publish": "pnpm publish -r",
    "check": "tsc -b && biome check",
    "check:fix": "tsc -b && biome check --write",
    "prepack": "pnpm build",
    "test": "vitest --environment=jsdom",
    "test:coverage": "vitest --coverage"
  },
  "lint-staged": {
    "*": "pnpm check:fix"
  },
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "keywords": [
    "tiptap",
    "tiptap extension",
    "tiptap steps",
    "tiptap disclosures",
    "prosemirror"
  ],
  "author": "Eva Decker",
  "files": [
    "dist/"
  ],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@changesets/cli": "^2.29.5",
    "@tiptap/core": "^3.0.1",
    "@tiptap/extension-document": "^3.0.1",
    "@tiptap/pm": "^3.0.1",
    "@tiptap/starter-kit": "^3.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.6",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@tiptap/core": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/namesakefyi/tiptap-extensions.git",
    "directory": "package"
  },
  "packageManager": "pnpm@10.8.0"
}
